# Maintainer: Aditya Shakya <adi1090x@gmail.com>

pkgname=packarch-gtk-theme-kripton
pkgver=1.0
pkgrel=3
pkgdesc="Kripton gtk theme for Packarch"
url="https://github.com/packarch-os/packarch-themes"
arch=('any')
license=('GPL3')
makedepends=()
depends=()
conflicts=()
groups=(packarch-themes)
provides=("${pkgname}")
options=(!strip !emptydirs)

prepare() {
	cp -af ../files/. ${srcdir}
}

package() {
	local _themesdir=${pkgdir}/usr/share/themes
	mkdir -p "$_themesdir"
	cp -r ${srcdir}/* "$_themesdir"
}
